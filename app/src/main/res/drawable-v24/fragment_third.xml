<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:id="@+id/kbd_eng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bcbcbc"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row1_btn1"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row1_btn2"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row1_btn3"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row1_btn4"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row2_btn1"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row2_btn2"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="&gt;"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row2_btn3"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/row2_btn4"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#ffffff"
                android:background="@drawable/circle_cyan"
                android:gravity="center_horizontal|center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>