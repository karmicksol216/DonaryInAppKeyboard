<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/_32sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:id="@+id/edt1ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/_10sdp"
            >
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:text="Enter your phone"
                    android:textStyle="normal"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt1"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/rounded_corner_silver_border_white_back"
                    />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/edt2ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/_10sdp"
            >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:text="Input Donation Amount"
                    android:textStyle="normal"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt3"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/dollar_icon"
                    android:background="@drawable/rounded_corner_silver_border_white_back"
                    />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/edt3ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/_10sdp"
            >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:text="Please enter your name"
                    android:textStyle="normal"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt2"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corner_silver_border_white_back"
                    />

        </LinearLayout>

</LinearLayout>
